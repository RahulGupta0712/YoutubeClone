<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="5dp"
    android:background="@color/black">

    <androidx.cardview.widget.CardView
        android:id="@+id/dbwbdhkwabhbc"
        android:layout_width="200dp"
        app:cardElevation="0dp"
        app:cardCornerRadius="20dp"
        android:layout_height="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/thumbnailPlaylist"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/shorts" />

    </androidx.cardview.widget.CardView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/dbwbdhkwabhbc"
        app:layout_constraintEnd_toEndOf="@+id/dbwbdhkwabhbc">

        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="25dp"
            android:layout_height="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/playlist"
            app:tint="@color/ghost_white" />

        <TextView
            android:id="@+id/videoCountPlaylist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="100"
            android:textColor="@color/ghost_white"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView10"
            app:layout_constraintStart_toEndOf="@+id/imageView10"
            app:layout_constraintTop_toTopOf="@+id/imageView10" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/titlePlaylist"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:text="Title"
        android:textColor="@color/white_smoke"
        app:layout_constraintEnd_toStartOf="@+id/menuPlaylist"
        app:layout_constraintStart_toEndOf="@+id/dbwbdhkwabhbc"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/visibilityPlaylist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Public"
        android:textColor="@color/dark_gray"
        app:layout_constraintStart_toStartOf="@+id/titlePlaylist"
        app:layout_constraintTop_toBottomOf="@+id/titlePlaylist" />

    <TextView
        android:id="@+id/textView25"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:text=" . "
        android:textColor="@color/dark_gray"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/visibilityPlaylist"
        app:layout_constraintStart_toEndOf="@+id/visibilityPlaylist" />

    <TextView
        android:id="@+id/textView26"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Playlist"
        android:textColor="@color/dark_gray"
        app:layout_constraintBottom_toBottomOf="@+id/visibilityPlaylist"
        app:layout_constraintStart_toEndOf="@+id/textView25"
        app:layout_constraintTop_toTopOf="@+id/visibilityPlaylist" />

    <ImageView
        android:id="@+id/menuPlaylist"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/three_dots_white" />
</androidx.constraintlayout.widget.ConstraintLayout>